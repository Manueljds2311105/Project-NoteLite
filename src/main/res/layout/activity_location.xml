<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/location_finding"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:gravity="center_vertical"

        android:drawablePadding="8dp"
        app:drawableStartCompat="@drawable/location_on"
        app:drawableTint="@color/text_color"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFlag"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/page_background"

        android:layout_marginEnd="40dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <ImageView
            android:id="@+id/imgFlag"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search"
            android:scaleType="centerCrop"
            tools:src="@drawable/flag_indonesia" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=""
        tools:text="Halo"

        android:textSize="24sp"
        android:textColor="@color/text_color"

        android:layout_marginStart="16dp"

        app:layout_constraintStart_toEndOf="@id/cardFlag"
        app:layout_constraintTop_toTopOf="@id/cardFlag"
        app:layout_constraintBottom_toBottomOf="@id/cardFlag" />

</androidx.constraintlayout.widget.ConstraintLayout>